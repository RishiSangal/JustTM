<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_back"
    tools:context="com.android.encypher.justtrackme.nevigationdrawer.PremiumFragment">

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/prem"
        android:id="@+id/premiumImage"

        android:layout_below="@+id/textView13"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:background="@drawable/buttonbox"
        android:text="BUY"
        android:id="@+id/preButton"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />

</RelativeLayout>
